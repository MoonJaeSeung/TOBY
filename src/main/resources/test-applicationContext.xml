<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--    <bean-->
    <!--        id="ConnectionMaker"-->
    <!--        class="com.example.toby.springbook.user.dao.DConnectionMaker"-->
    <!--    />-->

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
            <property name="driverClass" value="com.mysql.cj.jdbc.Driver" />
            <property name="url" value="jdbc:mysql://127.0.0.1:3306/testdb" />
            <property name="username" value="root" />
            <property name="password" value="0000" />
    </bean>

    <bean id="jdbcContext" class="com.example.toby.springbook.user.dao.JdbcContext">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="userDao" class="com.example.toby.springbook.user.dao.UserDao">
        <property name="dataSource" ref="dataSource"/>
        <property name="jdbcContext" ref="jdbcContext" />
    </bean>



</beans>


